#top{
    float: right;
    margin-top: 80px;
    margin-right: 90px;
    cursor: pointer;
}
#top:hover{
    animation:myaction 1s infinite;
    -webkit-animation: myaction 1s infinite;
    animation-direction:alternate;
    -webkit-animation-direction:alternate;
}
@keyframes myaction{
    from {margin-top: 80px;}
    to {margin-top: 40px;}
}
@-webkit-keyframes  myaction{
    from {margin-top: 80px;}
    to {margin-top: 40px;}
}
.wrapper{
    position: relative;
    margin: 0 auto;
    width: 800px;
}
.content{
    margin-top: 42px;
    margin-bottom: 10px;
    padding: 10px 13px 13px 13px;
    position: absolute;
    width: 233px;
    border: 1px solid #b5b5b5;
    border-radius: 4px;
    overflow: hidden;
    font-family: "Microsoft SongTi";
    font-size: 12.92px;
    color: #272727;
    line-height: 23px;
    transition:box-shadow 1s;
    background: #f9f6f6;
}
.content:hover{
    box-shadow: #666 0px 0px 15px;
    behavior: url(/PIE.htc);
    border: 1px solid #a2a2a2;
}
.info{
    width: 235px;
    height: 18px;
    margin: 0 auto;
    margin-bottom: 10px;
    border-bottom: 1px solid #e0dada;
    font-family: "Microsoft YaHei";
    font-size: 14px;
    color: #077dd0;
    padding-bottom: 10px;
}
.info>p{
    font-family: "Microsoft YaHei";
    font-size: 14px;
    color: #077dd0;
    display: inline-block;
    float: left;
}
.info>span{
    font-family: "Microsoft SongTi";
    font-size: 1em;
    color: #9ea0a1;
    display: inline-block;
    float: right;
}
.text{
    width: 235px;
    margin: 0 auto;
    text-indent: 2em;
    line-height: 23px;
}
.source{
    height: 23px;
    width: 235px;
    margin-top: 62px;
    padding-top: 15px;
    border-top:1px dashed #e0dada;
}
.source a,
.source span{
    float: right;
    margin-left: 10px;
    font-size: 12px;
}
.source a img,
.source span img{
    vertical-align: middle;
}
.source a{
    font-family: "Microsoft SongTi";
    color: #fe669b;
}
.source span{
    font-family: "Microsoft YaHei";
    color: #6d6c6c;
}
